<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ItemsServlet</servlet-name>
        <servlet-class>todolist.servlet.ItemsServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemsServlet</servlet-name>
        <url-pattern>/items</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>CharacterEncodingUtf8Filter</filter-name>
        <filter-class>todolist.filter.CharacterEncodingUtf8Filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingUtf8Filter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ContentTypeTextHtmlFilter</filter-name>
        <filter-class>todolist.filter.ContentTypeTextHtmlFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ContentTypeTextHtmlFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

</web-app>